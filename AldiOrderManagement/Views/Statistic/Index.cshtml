@model IEnumerable<Shared.Models.ProductSalesViewModel>

@{
ViewData["Title"] = "Sales Statistics";
}

<h1>Statistik Verkauf</h1>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Produktname</th>
        <th>Artikelnr.</th>
        <th>Verkauft</th>
        <th>Retoure</th>
        <th>Insgesamt</th>
        <th>Retourenquote</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    var returnRate = item.TotalSold > 0 ? (item.Returned / (double)item.TotalSold) * 100 : 0;
    <tr>
        <td>@item.ProductName</td>
        <td>@item.ArticleNumber</td>
        <td>@item.Sold</td>
        <td>@item.Returned</td>
        <td>@item.TotalSold</td>
        <td>@returnRate.ToString("F1")%</td>
    </tr>
    }

    @{
    var sumSold = Model.Sum(item => item.Sold);
    var sumReturned = Model.Sum(item => item.Returned);
    var sumTotalSold = Model.Sum(item => item.TotalSold);
    var sumReturnRate = sumSold > 0 ? (sumReturned / (double)sumSold) * 100 : 0;
    }

    <tr>
        <td colspan="2"><strong>Gesamtsummen</strong></td>
        <td><strong>@sumSold</strong></td>
        <td><strong>@sumReturned</strong></td>
        <td><strong>@sumTotalSold</strong></td>
        <td><strong>@sumReturnRate.ToString("F1")%</strong></td>
    </tr>
    </tbody>
</table>
